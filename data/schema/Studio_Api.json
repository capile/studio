{
    "title": "Api Schema",
    "type": "object",
    "className": "Studio\\Api",
    "patternProperties": "/^_/",
    "properties": {
        "api": { "type": "string", "description": "Name/base URL of this API" },
        "model": { "type": "string", "description": "Studio\\Model this API is based on" },
        "action": { "type": "string", "description": "Current action" },
        "id": { "type": "string", "description": "PK of the model for this current instance" },
        "key": { "type": "mixed", "description": "Use this property of the model as the PK" },
        "search": { "type": "object", "description": "Filter the available model records" },
        "groupBy": { "type": "object", "description": "Groups the query results" },
        "orderBy": { "type": "object", "description": "Orders the query results" },
        "options": { "type": "object", "description": "General options for this API" },
        "url": { "type": "string", "description": "Base URL for this API" },
        "parent": { "type": "int", "description": "Parent API in the current registration" },
        "relation": { "type": "string", "description": "Use this model relation" },
        "scope": { "type": "mixed", "description": "Current scope for this API view" },
        "auth": { "type": "mixed", "description": "Authentication and credentials required for accessing this API" },
        "actions": { "type": "object", "description": "Available actions" },
        "text": { "type": "object", "description": "Texts to be used at the API preview" },
        "template": { "type": "string", "description": "Use this custom template" },
        "run": { "type": "mixed", "description": "Executable setup to use instead of the API/Model interactions" },
        "graph": { "type": "mixed", "description": "Load dynamic graphs at the HTML view, may define which graphics to display" },
        "originalText": { "type": "string", "description": "Only display this text instead" },
        "config": { "type": "object", "description": "General configuration options" },
        "interface": { "alias": "api" },
        "order": { "alias": "orderBy" },
        "order-by": { "alias": "orderBy" },
        "group": { "alias": "groupBy" },
        "group-by": { "alias": "groupBy" },
        "class": { "alias": "model" }
    }
}